{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom","es7"],
    "allowJs": true,

    "esModuleInterop": true,

    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "strictNullChecks": false,
    "noEmit": false,
    "baseUrl": ".",

    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "manual_types"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
